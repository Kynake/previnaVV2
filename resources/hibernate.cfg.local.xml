<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">org.h2.Driver</property>
		<property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>
		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.format_sql">true</property>
		<property name="hbm2ddl.auto">update</property>
		<property name="hibernate.connection.url">jdbc:h2:~/previna_e</property>
		<property name="hibernate.connection.username">sa</property>
		<property name="hibernate.connection.password"></property>
		<mapping class="br.com.previna.model.User" />
		<mapping class="br.com.previna.model.UserAPP" />

		<mapping class="br.com.previna.model.Eixo" />
		<mapping class="br.com.previna.model.Pergunta" />
		<mapping class="br.com.previna.model.Resposta" />
		<mapping class="br.com.previna.model.AgeGroup" />
		<mapping class="br.com.previna.model.Conteudo" />
		<mapping class="br.com.previna.model.Historia" />
		<mapping class="br.com.previna.model.Fase"/>
		<mapping class="br.com.previna.model.Conexao"/>
		<mapping class="br.com.previna.model.Nodo"/>
	</session-factory>
</hibernate-configuration>